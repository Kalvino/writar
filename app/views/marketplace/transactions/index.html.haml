- heading "Transactions"
.row
  .col-md-12
    .portlet
      .portlet-header
        %h3
          %i.fa.fa-money
          Transactions
      / /.portlet-header
      .portlet-content
        .table-responsive
          %table#seller-transaction.table.table-striped.table-hover.table-highlight{"data-seller-id" => "#{encrypt(current_seller.id)}", "data-source" => "#{marketplace_transactions_url(format: "json")}"}
            %thead
              %tr
                %th Date
                %th Type
                %th Amount
                %th Bal Before
                %th Bal After
                %th Description
                %th Ref ID
            %tbody
        / /.table-responsive
      / /.portlet-content
    / /.portlet
  / /.col
