.faq-item
  .row
    .col-md-9
      = link_to "##{faq.id}", data: { toggle: "collapse" }, class: "faq-question" do
        = faq.question
      %small
        Added by
        %strong Admin
        %i.fa.fa-clock-o
        = faq.created_at.strftime("%b %d, %Y")
    .col-md-3.text-right
  .row
    .col-lg-12
      %div{ id: faq.id, class: "panel-collapse collapse" }
        .faq-answer
          %p= faq.answer.html_safe
