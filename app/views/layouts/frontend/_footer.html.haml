%footer
  .container
    .row
      .col-md-4
        %h3
          %i.fa.fa-flag>
          Contact Us
        %p.contact-text= t("contact.help_text")
        = render 'shared/contacts'
        %ul.brands.brands-inline.brands-sm.brands-transition.brands-circle
          = render 'shared/social_profiles'
        / PayPal Logo
        = link_to "https://www.paypal.com/webapps/mpp/pay-online", title: "How PayPal Works", target: "_blank", class: "hidden-sm hidden-xs" do
          %img.pull-left{:alt => "Payments by PayPal", :border => "0", :src => "https://www.paypalobjects.com/webstatic/mktg/logo/bdg_payments_by_pp_2line.png"}/
        = image_tag "rapid_ssl_seal.gif", class: "pull-right hidden-sm hidden-xs"
      .col-md-4.footer
        %h3
          %i.fa.fa-book>
          Recent Blogs
        %ul.list-unstyled.contact-address
          - posts.take(9).each do |blog|
            %li
              = link_to blog, title: blog.title.titleize do
                %i.fa.fa-angle-double-right
                = truncate blog.title.titleize, length: 50
      .col-md-4.footer
        %h3
          %i.fa.fa-bookmark>
          Our Services
        
        %ul.list-unstyled.contact-address
          - Category.where.not(content: nil).each do |category|
            %li
              = link_to  category_index_path(category), title: category.name do
                %i.fa.fa-angle-double-right
                = truncate category.name.titleize, length: 50
    .footer-bottom
      .footer-copyright
        %p
          Â© #{t('sitename')} #{Date.today.year} All right reserved.
      %ul.nav.navbar-nav.navbar-right.hidden-xs.hidden-sm
        %li= link_to "Home", root_path
        %li= link_to "About", about_path
        %li= link_to "Papers", essays_path
        %li= link_to "Blog", posts_path
        %li= link_to "Contact", contact_path
        - pages.each do |page|
          %li= link_to page.name, page
