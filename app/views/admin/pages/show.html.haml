= heading @page.name
.wrapper.wrapper-content.animated.fadeInRight.article
  .row
    .col-lg-10.col-lg-offset-1
      .ibox
        .ibox-content
          .pull-right
            .btn-group{"aria-label" => "", :role => "group"}
              = link_to "<i class='fa fa-external-link'></i> Open in app".html_safe, page_path(@page), class: "btn btn-primary btn-xs", target: "_blank"
              = link_to "<i class='fa fa-pencil'></i> Edit".html_safe, edit_admin_page_path(@page), class: "btn btn-white btn-xs" if can? :update, @page
              = link_to "<i class='fa fa-trash'></i> Delete".html_safe, admin_page_path(@page), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-xs" if can? :destroy, @page
          .text-center.article-title
            %span.text-muted
              %i.fa.fa-clock-o
              = @page.created_at.strftime("%d %b %Y")
            %h1
              = @page.name
            %p.text-muted
              %em
          = @page.content.gsub("{page_updated_at}", "Updated #{@page.updated_at.strftime("%d %b %Y")}").html_safe
          %hr/
          .row
            .col-md-6
              %h5 Actions:
              .btn-group{"aria-label" => "", :role => "group"}
                = link_to "<i class='fa fa-external-link'></i> Open in app".html_safe, page_path(@page), class: "btn btn-primary btn-xs",  target: "_blank"
                = link_to "<i class='fa fa-pencil'></i> Edit".html_safe, edit_admin_page_path(@page), class: "btn btn-white btn-xs" if can? :update, @page
                = link_to "<i class='fa fa-trash'></i> Delete".html_safe, admin_page_path(@page), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-xs" if can? :destroy, @page
            .col-md-6
              .small.text-right
                %h5 Stats:
                %div
                  %i.fa.fa-keyboard-o
                  Created: #{@page.created_at.strftime("%d %b %Y")}
                %i.fa.fa-pencil
                Updated:  #{@page.updated_at.strftime("%d %b %Y")}
