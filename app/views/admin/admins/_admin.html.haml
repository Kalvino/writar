%tr
  %td= admin.first_name
  %td= admin.last_name
  %td= admin.email
  %td= admin.role.titleize
  %td= admin.sign_in_count
  %td= admin.last_sign_in_at.nil? ? "-" : admin.last_sign_in_at.strftime("%d %b %Y at %I:%M%p")
  %td
    .btn-group{:role => "group"}
      = link_to "<i class='fa fa-eye'></i> View".html_safe, [:admin, admin], class: "btn-white btn btn-xs" if can? :read, admin
      = link_to "<i class='fa fa-pencil'></i> Edit".html_safe, edit_admin_admin_path(admin), class: "btn-white btn btn-xs" if can? :update, admin
      = link_to "<i class='fa fa-times'></i> Delete".html_safe, [:admin, admin], method: :delete, data: { confirm: "Are you sure you want to delete this admin?" }, class: "btn-white btn btn-xs" if can? :destroy, admin
