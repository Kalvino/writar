= form_for [:admin, @category], html: {class: "form-horizontal"} do |f|
  = errors_for @category
  .form-group
    = f.label :name, class: "col-sm-2"
    .col-sm-10
      = f.text_field :name, placeholder: "Name", class: "form-control"
  .form-group
    = f.label :page_title, class: "col-sm-2"
    .col-sm-10
      = f.text_field :title, placeholder: "Title", class: "form-control"
  .form-group
    = f.label :meta_description, class: "col-sm-2"
    .col-sm-10
      = f.text_field :meta_description, placeholder: "Title", class: "form-control"
  .form-group
    = f.label :content, class: "col-sm-2"
    .col-sm-10
      = f.text_area :content, class: "form-control", data: { froala_upload_url: admin_froala_uploads_path }

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-white"
