.row
  = form_for [:admin, @essay], html: { multipart: true, role: "form", id: "paper-upload", data: { froala_upload_url: admin_froala_uploads_path }} do |f|
    .col-md-12
      = errors_for @essay
    .col-md-6.b-r
      %h3.m-t-none.m-b Paper Details
      %p Please fill out the particulars of the essay you want to upload.
      .form-group
        = f.label :title
        = f.text_field :title, class: "form-control"
      .row
        .col-md-6
          .form-group
            = f.label :referencing_style
            = f.select :referencing_style_id, options_for_referencing_styles, {}, class: "form-control"
        .col-md-6
          .form-group
            = f.label :category
            = f.select :category_id, options_for_categories, {}, class: "form-control select-2"
      .row
        .col-md-4
          = f.label :word_count
          = f.number_field :word_count, class: "form-control", step: 1
        .col-md-4
          = f.label :price
          = f.number_field :price, class: "form-control", step: 0.01
        .col-md-4
          = f.label :page_count
          = f.number_field :page_count, class: "form-control", step: 1
      .form-group
        = f.label :short_description, "Summary"
        = f.text_area :short_description, class: "form-control", rows: 3, placeholder: "What is this paper about?"
        %span#char-counter-1
        |
        %span#char-counter-2
      .form-group
        = f.label :question_answered
        = f.text_area :question, class: "form-control",  rows: 4
    .col-md-6
      .form-group
        = f.label :preview
        = f.text_area :preview, class: "form-control",  rows: 9
      .upload-box
        = f.file_field :document, class: "inputfile inputfile-4"
        = f.label :document do
          %figure
            %svg{:height => "17", :viewbox => "0 0 20 17", :width => "20", :xmlns => "http://www.w3.org/2000/svg"}
              %path{:d => "M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"}
          %span Choose a fileâ€¦
      / <input type="file" name="" id="file-5" class="inputfile inputfile-4" data-multiple-caption="{count} files selected" multiple="">
    .col-md-12
      = f.submit class: "btn btn-sm btn-primary pull-right", id: "submit-paper"
