.faq-item
  .row
    .col-md-9
      = link_to "##{faq.id}", data: { toggle: "collapse" }, class: "faq-question" do
        = faq.question
      %small
        Added by
        %strong Admin
        %i.fa.fa-clock-o
        = faq.created_at.strftime("%b %d, %Y")
    .col-md-3.text-right
      .btn-group{:role => "group"}
        - if can? :update, faq
          = link_to "<i class='fa fa-pencil'></i> Edit".html_safe, edit_admin_faq_path(faq), class: "btn-white btn btn-xs"
        - if can? :destroy, faq
          = link_to "<i class='fa fa-trash'></i> Delete".html_safe, admin_faq_path(faq), method: :delete, class: "btn-white btn btn-xs"

  .row
    .col-lg-12
      %div{ id: faq.id, class: "panel-collapse collapse" }
        .faq-answer
          %p= faq.answer.html_safe
